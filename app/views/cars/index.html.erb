<h1>Listing cars</h1>

<table>
  <tr>
    <th>Marca</th>
    <th>Ano</th>
    <th>Modelo</th>
    <th>Variacao</th>
    <th>Cor</th>
    <th>Kilometragem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.marca %></td>
    <td><%= car.ano %></td>
    <td><%= car.modelo %></td>
    <td><%= car.variacao %></td>
    <td><%= car.cor %></td>
    <td><%= car.kilometragem %></td>
    <td><%= link_to 'Show', user_car_path(car, car.user) %></td>
    <td><%= link_to 'Edit', edit_user_car_path(car, car.user)%></td>
    <td><%= link_to 'Destroy', user_car_path(car, car.user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

