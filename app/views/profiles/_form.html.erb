<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :idade %><br />
    <%= f.number_field :idade %>
  </div>
  <div class="field">
    <%= f.label :sexo %><br />
    <%= f.check_box :sexo %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br />
    <%= f.number_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :local %><br />
    <%= f.text_field :local %>
  </div>
   <%= f.label :avatar %><br />
    <% if f.object.avatar_url %>
     <%= image_tag f.object.avatar_url.to_s if f.object.image? %>
    <% else %>

      <%= f.file_field :avatar %>
  
      <%= f.label :remote_avatar_url, "or image URL" %>
      <%= f.text_field :remote_avatar_url %>
  
    <% end %>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
